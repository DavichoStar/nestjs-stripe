{
  "name": "nestjs-stripe",
  "version": "1.0.0",
  "description": "Provides an injectable Stripe client to nestjs modules",
  "repository": "https://github.com/dhaspden/nestjs-stripe",
  "author": {
    "name": "Dylan Aspden",
    "url": "http://github.com/dhaspden"
  },
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "codecov": "codecov",
    "format": "prettier --write '**/*.md' '**/*.json' '**/*.ts' '**/*.yml' .prettierrc",
    "prebuild": "rimraf lib",
    "prepublish:npm": "yarn build",
    "publish:npm": "yarn publish --access public",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@nestjs/common": "9.2.1",
    "@nestjs/core": "9.2.1",
    "@nestjs/testing": "9.2.1",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.17",
    "codecov": "3.8.3",
    "jest": "29.3.1",
    "prettier": "2.8.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.8.0",
    "stripe": "11.4.0",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0 || ^9.0.0",
    "@nestjs/core": "^7.0.0 || ^8.0.0 || ^9.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.8.0",
    "stripe": "^11.4.0"
  },
  "keywords": [
    "nestjs",
    "stripe",
    "payment"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {}
}
